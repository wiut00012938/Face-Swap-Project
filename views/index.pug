doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/static/styles/index.css')
    title Face Swap App
  body
    h1 Face Swap App
    #targetImagesContainer
      img.thumbnail(src='/static/images/target1.jpg', alt='Image 1', onclick="selectImage('/static/images/target1.jpg')")
      img.thumbnail(src='/static/images/target2.webp', alt='Image 2', onclick="selectImage('/static/images/target2.wepb')")
      img.thumbnail(src='/static/images/target3.jpg', alt='Image 3', onclick="selectImage('/static/images/target3.jpg')")
      img.thumbnail(src='/static/images/target4.jpg', alt='Image 4', onclick="selectImage('/static/images/target4.jpg')")
      img.thumbnail(src='/static/images/target5.jpg', alt='Image 5', onclick="selectImage('/static/images/target5.jpg')")
      img.thumbnail(src='/static/images/target6.jpg', alt='Image 6', onclick="selectImage('/static/images/target6.jpg')")
    label(for='userImageInput') Upload Your Image:
    input#userImageInput(type='file', accept='image/*')
    button(onclick='performFaceSwap()') Swap Faces
    img#resultImage(alt='Swapped Image')
    script(src='/static/javascripts/index.js')